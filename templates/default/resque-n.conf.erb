#!upstart
description "Resque worker <%= @instance %> <%= @queue %>"
respawn

start on starting resque
stop on stopping resque

exec su - deploy -c 'cd <%= @deploy[:deploy_to] %>/current/; QUEUE=<%= @queue %> VERBOSE=1 RAILS_ENV=<%= @deploy[:rails_env] %> bundle exec rake resque:work >> /var/log/resque/<%= @instance %>.log 2>&1'
